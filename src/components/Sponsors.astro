---
// 赞助商数据，LOGO 放置在 public/
const sponsors = [
  {
    title: "DiBoot",
    subtitle: "低代码开发平台",
    description: "高效赋能开发者，多数功能不手写",
    logo: "/images/sponsors/diboot.png",
    link: "https://www.diboot.com/?from=mp",
  },
  {
    title: "FlowLong",
    subtitle: "飞龙工作流引擎",
    description:
      "为中国特色审批流打造的国产JSON流程引擎",
    logo: "/images/sponsors/flowlong.png",
    link: "https://gitee.com/aizuda/flowlong?from=mp",
  },
  {
    title: "CRMEB",
    subtitle: "Java 营销电商系统",
    description: "赋能开发者，让商城开发事半功倍",
    logo: "/images/sponsors/crmeb.webp",
    link: "http://github.crmeb.net/u/MyBatis-Plus",
  },
];
---

<div class="not-content">
  <div class="container mx-auto py-6 text-sm leading-6">
    <div class="flex flex-wrap -mx-4">
      {sponsors.map(card => (
        <a href={card.link} class="w-full md:w-1/3 mt-4 px-4 no-underline text-current hover:no-underline" style="max-width: calc(100% * ${perRow});" target="_blank">
          <figure class="relative flex flex-col-reverse border-2 rounded-lg p-6 dark:bg-slate-800 dark:highlight-white/5 transform transition hover:-translate-y-2.5 h-full">
            <blockquote class="mt-6 text-slate-700 dark:text-slate-300 flex-1">
              <p>{card.description}</p>
            </blockquote>
            <figcaption class="flex items-center space-x-4">
              <img src={card.logo} alt="" class="flex-none w-14 h-14 object-contain" loading="lazy" decoding="async">
              <div class="flex-auto">
                <div class="text-base text-slate-900 font-semibold dark:text-slate-200">
                  {card.title}
                </div>
                <div class="mt-0.5 dark:text-slate-300">
                  {card.subtitle}
                </div>
              </div>
            </figcaption>
          </figure>
        </a>
      ))}
    </div>
    <div class="flex justify-center mt-8 transform transition hover:-translate-y-2.5">
      <a href="/sponsor-application" class="border-2 text-slate-700 dark:text-slate-300 font-bold py-2 px-8 rounded-full no-underline text-current hover:no-underline">
        成为赞助商
      </a>
    </div>
  </div>
</div>
